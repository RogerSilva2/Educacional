<Page
    x:Class="Educacional.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educacional"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Perfil" FontSize="18" FontWeight="Bold" Foreground="Orange" Margin="0,50,0,0"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,25,10,10">
                <TextBlock Text="Id:" Width="80" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='3' Name="id" Width="180"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Nome:" Width="80" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='2' Name="name" Width="180"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Username:" Width="80" FontWeight="Bold"/>
                <TextBlock x:ConnectionId='1' Name="username" Width="180"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

