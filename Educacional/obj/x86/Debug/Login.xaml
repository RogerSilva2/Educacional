<Page
    x:Class="Educacional.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educacional"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Regras do basquete" FontSize="18" FontWeight="Bold" Margin="0,50,0,0" Foreground="Orange"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,25,10,10" HorizontalAlignment="Center">
                <TextBlock Text="Username:" Width="80"/>
                <TextBox x:ConnectionId='5' Name="username" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <TextBlock Text="Senha:" Width="80"/>
                <PasswordBox x:ConnectionId='4' Name="password" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <TextBlock x:ConnectionId='3' x:Name="error" Foreground="red" Text="*** Usuário ou senha inválidos ***" FontSize="12" Visibility="Collapsed"></TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="0">
                <Button x:ConnectionId='2' Name="Button_Login" Content="Entrar" Width="100"                     Foreground="White" Background="Orange" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <HyperlinkButton x:ConnectionId='1' Content="Novo aqui? Cadastre-se"                       ></HyperlinkButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

