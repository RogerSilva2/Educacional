<Page
    x:Class="Educacional.Rules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educacional"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Regras do basquete" FontSize="18" FontWeight="Bold" Foreground="Orange" Margin="0,50,0,0"></TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <MediaElement x:ConnectionId='3' Name="media" AutoPlay="False" HorizontalAlignment="Left" Source="Assets/basquete.mp4" Height="300" Width="500" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='1' FontFamily="Segoe MDL2 Assets" Content="&#xE15B;" Margin="5" Width="40" Height="40" Foreground="White" Background="Red"                    />
                <Button x:ConnectionId='2' FontFamily="Segoe MDL2 Assets" Content="&#xE102;" Margin="5" Width="40" Height="40" Foreground="White" Background="Green"                    />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

